<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE structures SYSTEM "../doc/structures.dtd">
<structures>
    <structure id="users" name="Users" level="11" group="settings">
        <description/>
        <icon id="icon-users" src=""/>
        <sections>
            <section id="list_users" name="Manage users" url="/tao/Users/index"/>
            <section id="add_user" name="Add a user" url="/tao/Users/add"/>
            <section id="edit_user" name="Edit a user" url="/tao/Users/edit" disabled="true"/>
            <section id="manage_roles" name="Manage roles" url="/tao/Roles/index">
                <trees>
                    <tree name="Roles library"
                          className="Role"
                          dataUrl="/tao/Roles/getOntologyData"
                          selectClass="role-class-properties"
                          selectInstance="role-properties"
                          delete="role-delete"
                     />
                </trees>
                <actions>
                	<action id="role-class-properties" name="Properties" url="/tao/Roles/editRoleClass" group="content" context="class">
                        <icon id="icon-edit"/>
                    </action>
                    <action id="role-properties" name="Properties"  url="/tao/Roles/editRole" group="content" context="instance">
                        <icon id="icon-edit"/>
                    </action>
                    <action id="role-filter" name="Filter" context="*" group="search" binding="filter">
                        <icon id="icon-filter"/>
                    </action>
                    <action id="role-search" name="Search" url="/tao/Roles/search" context="*" group="search" binding="launchFinder">
                        <icon id="icon-find"/>
                    </action>
                    <action id="role-new" name="New role" url="/tao/Roles/addInstance" context="class" group="content" binding="instanciate">
                        <icon id="icon-tools" src=""/>
                    </action>
                    <action id="role-delete" name="Delete" url="/tao/Roles/delete" context="resource" group="tree" binding="removeNode">
                        <icon id="icon-bin"/>
                    </action>
                    <action id="role-export" name="Export" url="/tao/Export/index" context="resource" group="content">
                        <icon id="icon-export"/>
                    </action>
                </actions>
            </section>
        </sections>
    </structure>

    <structure id="settings" name="Settings" level="8" group="settings">
        <description/>
        <icon id="icon-settings" src=""/>
        <sections>
            <section id="settings_ext_mng" name="Extensions manager" url="/tao/ExtensionsManager/index"/>
            <section id="settings_im_export" name="Ontology" url="/tao/RdfImExport/index"/>
            <section id="settings_versioning" name="File sources" url="/tao/SettingsVersioning/index">
                <trees>
                    <tree name="File sources"
                          className="Repository"
                          dataUrl="/tao/SettingsVersioning/getOntologyData"
                          selectClass="versioning-index"
                          selectInstance="versioning-properties"
                          delete="versioning-delete"
                     />
                </trees>
                <actions>
                	<action id="versioning-index" name="Index" url="/tao/SettingsVersioning/index" group="none" context="class">
                        <icon id=""/>
                    </action>
                    <action id="versioning-properties" name="Properties"  url="/tao/SettingsVersioning/editRepository" group="content" context="instance">
                        <icon id="icon-edit"/>
                    </action>
                    <action id="versioning-new" name="New repository" url="/tao/SettingsVersioning/addInstance" context="class" group="content" binding="instanciate">
                        <icon id="icon-add"/>
                    </action>
                    <action id="versioning-delete" name="Delete" url="/tao/SettingsVersioning/delete" context="instance" group="tree" binding="removeNode">
                        <icon id="icon-bin"/>
                    </action>
                </actions>
            </section>
        </sections>
    </structure>

    <structure id="user_settings" name="User Settings" level="110" group="settings">
        <description/>
        <icon id="icon-user" src=""/>
        <sections>
            <section id="settings_my_settings" name="My settings" url="/tao/UserSettings/properties"/>
            <section id="settings_my_password" name="Change password" url="/tao/UserSettings/password"/>
        </sections>
    </structure>

    <entrypoint id="backoffice" title="Test Developers and Administrators" label="TAO Back Office" url="tao/Main/index">
        <description>
            <![CDATA[Create items, manage item and test banks, organize cohorts and deliveries, prepare reports, set up workflows.]]></description>
    </entrypoint>
</structures>
